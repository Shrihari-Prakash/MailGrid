<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DBReg</servlet-name>
        <servlet-class>com.DBReg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDB</servlet-name>
        <servlet-class>com.InboxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComposeServlet</servlet-name>
        <servlet-class>com.ComposeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InboxView</servlet-name>
        <servlet-class>com.InboxView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataOk</servlet-name>
        <servlet-class>com.DataOk</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBReg</servlet-name>
        <url-pattern>/DBReg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDB</servlet-name>
        <url-pattern>/ShowDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComposeServlet</servlet-name>
        <url-pattern>/ComposeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InboxView</servlet-name>
        <url-pattern>/InboxView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataOk</servlet-name>
        <url-pattern>/DataOk</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
